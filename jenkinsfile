pipeline {
    agent any
    tools {
        maven 'Maven 3.3.9'
        jdk 'jdk8'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            
        }
    
        stage('test') {

            steps {
                echo 'clone code from github repo'
            }
        } 
    

    
        stage('deploy') {

            steps {
                echo 'clone code from github repo'
            }
        } 
    

    
        stage('hello') {

            steps {
                echo 'clone code from github repo'
            }
        } 
    }
    
    post {
        
        always {
            emailext body: 'Jfrog project', subject: 'pipeline status', to: 'priyesh007srivastava@gmail.com'  
        }
    }


}