pipeline {
    agent any

    tools {
        maven 'maven-slave'
        jdk 'JAVA_HOME'
    }

    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                    export JAVA_HOME=${JAVA_HOME}
                '''
            }
        }

    stages {
        stage('build') {
            
            steps { 
                echo 'clone code from github repo'
            }
        } 
    

    
        stage('test') {

            steps {
                echo 'clone code from github repo'
            }
        } 
    

    
        stage('deploy') {

            steps {
                echo 'clone code from github repo'
            }
        } 
    

    
        stage('hello') {

            steps {
                echo 'clone code from github repo'
            }
        } 
    }
    
    post {
        
        always {
            emailext body: 'Jfrog project', subject: 'pipeline status', to: 'priyesh007srivastava@gmail.com'  
        }
    }


}